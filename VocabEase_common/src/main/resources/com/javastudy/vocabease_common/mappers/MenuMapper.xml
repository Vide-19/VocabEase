		<!--权限编码-->
		<result column="permission_code" property="permissionCode"  />
		<!--图标-->
		<result column="icon" property="icon"  />
	</resultMap>


	<!-- 通用查询结果列-->
	<sql id="base_column_list">
		 m.menu_id,m.menu_name,m.menu_type,m.menu_url,m.p_id,
		 m.sort,m.permission_code,m.icon
	</sql>

	<sql id="base_condition_filed">
			<if test="query.menuId != null">
				 and  m.menu_id = #{query.menuId}
			</if>
			<if test="query.menuName != null and query.menuName!=''">
				 and  m.menu_name = #{query.menuName}
			</if>
			<if test="query.menuType != null">
				 and  m.menu_type = #{query.menuType}
			</if>
			<if test="query.menuUrl != null and query.menuUrl!=''">
				 and  m.menu_url = #{query.menuUrl}
			</if>
			<if test="query.pId != null">
				 and  m.p_id = #{query.pId}
			</if>
			<if test="query.sort != null">
				 and  m.sort = #{query.sort}
			</if>
			<if test="query.permissionCode != null and query.permissionCode!=''">
				 and  m.permission_code = #{query.permissionCode}
			</if>
			<if test="query.icon != null and query.icon!=''">
				 and  m.icon = #{query.icon}
			</if>
	</sql>

	<!-- 通用查询条件列-->
	<sql id="query_condition">
	 <where>
			<include refid="base_condition_filed" />
			<if test="query.menuNameFuzzy!= null  and query.menuNameFuzzy!=''">
				 and  m.menu_name like concat('%', #{query.menuNameFuzzy}, '%')
			</if>
			<if test="query.menuUrlFuzzy!= null  and query.menuUrlFuzzy!=''">
				 and  m.menu_url like concat('%', #{query.menuUrlFuzzy}, '%')
			</if>
			<if test="query.permissionCodeFuzzy!= null  and query.permissionCodeFuzzy!=''">
				 and  m.permission_code like concat('%', #{query.permissionCodeFuzzy}, '%')
			</if>
			<if test="query.iconFuzzy!= null  and query.iconFuzzy!=''">
				 and  m.icon like concat('%', #{query.iconFuzzy}, '%')
			</if>
	 </where>
	</sql>

	<!-- 查询集合-->
	<select id="selectList" resultMap="base_result_map" >
		 SELECT <include refid="base_column_list" /> FROM menu m <include refid="query_condition" />
		 <if test="query.orderBy!=null">
			 order by ${query.orderBy}
		 </if>
		 <if test="query.simplePage!=null">
			 limit #{query.simplePage.start},#{query.simplePage.end}
		 </if>
	</select>

