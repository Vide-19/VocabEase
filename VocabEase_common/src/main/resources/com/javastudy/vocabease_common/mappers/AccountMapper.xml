		<!--创建时间-->
		<result column="create_time" property="createTime"  />
	</resultMap>


	<!-- 通用查询结果列-->
	<sql id="base_column_list">
		 a.user_id,a.user_name,a.phone,a.password,a.position,
		 a.status,a.roles,a.create_time
	</sql>

	<sql id="base_condition_filed">
			<if test="query.userId != null">
				 and  a.user_id = #{query.userId}
			</if>
			<if test="query.userName != null and query.userName!=''">
				 and  a.user_name = #{query.userName}
			</if>
			<if test="query.phone != null and query.phone!=''">
				 and  a.phone = #{query.phone}
			</if>
			<if test="query.password != null and query.password!=''">
				 and  a.password = #{query.password}
			</if>
			<if test="query.position != null and query.position!=''">
				 and  a.position = #{query.position}
			</if>
			<if test="query.status != null">
				 and  a.status = #{query.status}
			</if>
			<if test="query.roles != null and query.roles!=''">
				 and  a.roles = #{query.roles}
			</if>
			<if test="query.createTime != null and query.createTime!=''">
				 <![CDATA[ and  a.create_time=str_to_date(#{query.createTime}, '%Y-%m-%d') ]]>
			</if>
	</sql>

	<!-- 通用查询条件列-->
	<sql id="query_condition">
	 <where>
			<include refid="base_condition_filed" />
			<if test="query.userNameFuzzy!= null  and query.userNameFuzzy!=''">
				 and  a.user_name like concat('%', #{query.userNameFuzzy}, '%')
			</if>
			<if test="query.phoneFuzzy!= null  and query.phoneFuzzy!=''">
				 and  a.phone like concat('%', #{query.phoneFuzzy}, '%')
			</if>
			<if test="query.passwordFuzzy!= null  and query.passwordFuzzy!=''">
				 and  a.password like concat('%', #{query.passwordFuzzy}, '%')
			</if>
			<if test="query.positionFuzzy!= null  and query.positionFuzzy!=''">
				 and  a.position like concat('%', #{query.positionFuzzy}, '%')
			</if>
			<if test="query.rolesFuzzy!= null  and query.rolesFuzzy!=''">
				 and  a.roles like concat('%', #{query.rolesFuzzy}, '%')
			</if>
			<if test="query.createTimeStart!= null and query.createTimeStart!=''">
				 <![CDATA[ and  a.create_time>=str_to_date(#{query.createTimeStart}, '%Y-%m-%d') ]]>
			</if>
			<if test="query.createTimeEnd!= null and query.createTimeEnd!=''">
				 <![CDATA[ and  a.create_time< date_sub(str_to_date(#{query.createTimeEnd},'%Y-%m-%d'),interval -1 day) ]]>
			</if>
	 </where>
	</sql>

	<!-- 查询集合-->
	<select id="selectList" resultMap="base_result_map" >
		 SELECT <include refid="base_column_list" />
		<if test="query.rolesQuery != null and query.rolesQuery">
		,(SELECT GROUP_CONCAT(role_name SEPARATOR ',') FROM role WHERE FIND_IN_SET(role_id,a.roles)) roleNames
		</if>
		 FROM account a <include refid="query_condition" />
		 <if test="query.orderBy!=null">
			 order by ${query.orderBy}
		 </if>
		 <if test="query.simplePage!=null">
			 limit #{query.simplePage.start},#{query.simplePage.end}
		 </if>
	</select>

	<!-- 查询数量-->
	<select id="selectCount" resultType="java.lang.Integer" >
		 SELECT count(1) FROM account a <include refid="query_condition" />
	</select>

