	</update>

	<!-- 根据ArticleIdAndCategoryId删除-->
	<delete id="deleteByArticleIdAndCategoryId">
		delete from article2category where article_id=#{articleId} and category_id=#{categoryId}
	</delete>

	<!-- 根据ArticleIds删除多个对象-->
	<delete id="deleteByArticleIds">
		delete from article2category where article_id in <foreach collection="articleIds" separator="," item="item">#{item}</foreach>
	</delete>

	<!-- 根据PrimaryKey获取对象-->
	<select id="selectByArticleIdAndCategoryId" resultMap="base_result_map" >
		select <include refid="base_column_list" /> from article2category a where article_id=#{articleId} and category_id=#{categoryId}
	</select>

</mapper>